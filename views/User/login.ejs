<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendance System</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-black text-white min-h-screen flex flex-col justify-between">
    <!-- Header Section -->
    <header>
      <nav class="bg-zinc-800 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
          <a href="/" class="text-white text-lg font-semibold"
            >Attendance System</a
          >
          <div class="space-x-4">
            <a href="/" class="text-gray-300 hover:text-white hover:underline"
              >Home</a
            >
            <a
              href="/about"
              class="text-gray-300 hover:text-white hover:underline"
              >About Us</a
            >
            <a
              href="/register"
              class="text-gray-300 hover:text-white hover:underline"
              >Register</a
            >
            <a
              href="/login"
              class="text-gray-300 hover:text-white hover:underline"
              >Login</a
            >
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content Section for the Form -->
    <div class="flex-grow flex items-center justify-center px-4 py-6">
      <div class="w-full max-w-md p-6 bg-gray-800 rounded shadow-lg">
        <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>
        <form action="/login" method="post" class="space-y-4">
          <!-- Username -->
          <div>
            <label for="username" class="block text-sm font-medium"
              >Email:</label
            >
            <input
              type="text"
              id="username"
              name="username"
              required
              class="w-full px-4 py-2 mt-1 bg-gray-900 text-white border border-gray-700 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium"
              >Password</label
            >
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-2 mt-1 bg-gray-900 text-white border border-gray-700 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- User or Admin Role -->
          <div>
            <label for="role" class="block text-sm font-medium">Role</label>
            <select
              id="role"
              name="role"
              required
              class="w-full px-4 py-2 mt-1 bg-gray-900 text-white border border-gray-700 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="student">Student</option>
              <option value="admin">Admin</option>
            </select>
          </div>

          <!-- Submit Button -->
          <div>
            <button
              type="submit"
              class="w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400"
            >
              Login
            </button>
          </div>

          <!-- Register Link -->
          <div class="text-center">
            <p class="text-sm text-gray-400">
              Don't have an account?
              <a href="/register" class="text-blue-400 hover:underline"
                >Register here</a
              >
            </p>
          </div>
        </form>
      </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-zinc-800 text-gray-300 p-4 text-center">
      &copy; <%= new Date().getFullYear() %> Attendance System. All Rights
      Reserved.
    </footer>
  </body>
</html>
